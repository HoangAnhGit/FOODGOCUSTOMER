        <!-- ===== Thông tin địa chỉ ===== -->

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- PHẦN MÃ ĐƠN & GHI CHÚ -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:id="@+id/tv_order_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Mã đơn: FDG-0001"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="15sp"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_order_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ghi chú: Không cay, giao nhanh nha!"
                        android:textColor="#555555"
                        android:textSize="14sp" />
                </LinearLayout>
                <!-- Thông tin tài xế -->
                <TextView
                    android:id="@+id/tv_shipper_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tài xế: Nguyễn Văn A - 0912345678"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- Điểm lấy -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:backgroundTint="@color/red_danger"
                        android:background="@drawable/bg_dot"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Từ"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_from_store"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đồ ăn | Quán Quen - Mỹ Chua Cay - 167 Tây Sơn"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tv_from_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="71 Ngõ 167 Tây Sơn, P. Quang Trung, Đống Đa, Hà Nội"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginBottom="12dp"/>

                <!-- Điểm giao -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <View
                        android:layout_width="8dp"
                        android:layout_height="8dp"
                        android:backgroundTint="@color/green_success"
                        android:background="@drawable/bg_dot"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Đến"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="14sp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_to_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="26 Vương Thừa Vũ, Khương Trung, Thanh Xuân, Hà Nội"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginTop="6dp"/>

                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="albinq832004 - 0912345678"
                    android:textColor="#777777"
                    android:textSize="13sp"
                    android:layout_marginBottom="4dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- ===== Tóm tắt đơn hàng ===== -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tóm tắt đơn hàng"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp"/>

                <!-- RecyclerView hiển thị danh sách món -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_order_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#EEEEEE"
                    android:layout_marginVertical="8dp"/>

                <!-- Tổng cộng -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng (1 món)"
                        android:textColor="#555555"
                        android:textSize="14sp"/>

                    <TextView
                        android:id="@+id/tv_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="69.000đ"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="14sp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Phí giao hàng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí giao hàng (1.9 km)"
                            android:textColor="#555555"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="16.000đ"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Phí áp dụng -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Phí áp dụng"
                            android:textColor="#555555"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3.000đ"
                            android:textColor="@color/black"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Giảm giá -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Giảm giá"
                            android:textColor="#555555"
                            android:textSize="13sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-15.000đ"
                            android:textColor="@color/red_danger"
                            android:textSize="13sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorGray"/>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tổng cộng"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_grand_total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="73.000đ"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tv_payment_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ĐÃ THANH TOÁN"
                    android:textColor="@color/green_success"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:background="@drawable/bg_dot"
                    android:padding="6dp"
                    android:layout_marginTop="8dp"
                    android:layout_gravity="end"
                    android:gravity="center"
                    android:drawableStart="@drawable/confirm"
                    android:drawablePadding="4dp"/>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

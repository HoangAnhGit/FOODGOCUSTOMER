<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_input_login"
    android:padding="8dp"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Card chứa ảnh và thông tin -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Ảnh món ăn -->
        <ImageView
            android:id="@+id/img_restaurant"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avartar" />

        <!-- Thông tin bên phải -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <!-- Tên quán -->
            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bún Bò Huế Quang Vinh - Triều Khúc"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="#000000" />

            <!-- Hàng chứa rating, đơn hàng, khoảng cách -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/star" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5(15)"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/pack"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="200"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:textColor="#333333" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/location"
                    android:layout_marginStart="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.7km"
                    android:textSize="12sp"
                    android:layout_marginStart="2dp"
                    android:textColor="#333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Dòng "Xem thêm" -->
    <TextView
        android:id="@+id/tvMore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Xem thêm 5 quán  >"
        android:textColor="#444444"
        android:textSize="12sp"
        android:layout_marginTop="6dp" />

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Ảnh quán -->
        <ImageView
            android:id="@+id/imgRestaurant"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/avartar" />

        <!-- Nội dung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRestaurantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bún Bò Huế Quang Vinh - Triều Khúc"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Buổi sáng mà tạt làm một tô bún bò Huế thơm ngon đậm đà cùng gia đình thì còn gì tuyệt vời bằng..."
                android:textColor="@color/black"
                android:textSize="14sp"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="2dp" />

            <!-- Rating / lượt bán / khoảng cách -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/star" />

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="5(15)"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/pack"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="200"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"/>

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/location"
                    android:layout_marginStart="12dp"/>

                <TextView
                    android:text="0.7km"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_marginStart="4dp"  />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/next"
                    android:layout_marginStart="32dp"/>
            </LinearLayout>

            <!-- Danh sách món -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rcvFoodList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>

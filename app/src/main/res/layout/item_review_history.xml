<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Dòng 1: Tên món ăn -->
        <TextView
            android:id="@+id/tvDishName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cơm gà xối mỡ"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <!-- Dòng 2: Tên nhà hàng -->
        <TextView
            android:id="@+id/tvRestaurantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nhà hàng Gà Rán FoodGo"
            android:textSize="13sp"
            android:textColor="@color/colorGrayText"
            android:layout_marginTop="2dp" />

        <!-- Dòng 3: Rating (sao) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4"
                android:stepSize="1"
                android:isIndicator="true"
                android:progressTint="@color/colorPrimary" />
        </LinearLayout>

        <!-- Dòng 4: Nội dung đánh giá -->
        <TextView
            android:id="@+id/tvReviewComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gà giòn, nóng, giao nhanh lắm!"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:layout_marginTop="6dp" />

        <!-- Dòng 5: Ngày đánh giá -->
        <TextView
            android:id="@+id/tvReviewDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá ngày 01/11/2025"
            android:textSize="12sp"
            android:textColor="@color/colorGrayText"
            android:layout_marginTop="6dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>
